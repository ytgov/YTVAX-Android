<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Button style-->
    <style name="YK_VAX.Widget.MaterialComponents.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="backgroundTint">@android:color/white</item>
    </style>

    <style name="YK_VAX.Widget.MaterialComponents.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="fontFamily">@font/yk_montserrat_regular</item>
        <item name="android:lineSpacingMultiplier">0.1</item>
        <item name="strokeColor">@color/dark_blue</item>
    </style>


    <style name="YK_VAX.Widget.MaterialComponents.Radio.OutlinedRadio" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/yk_montserrat_regular</item>
        <item name="android:paddingStart">@dimen/large</item>
        <item name="android:paddingEnd">@dimen/large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/radio_button_border</item>
        <item name="android:button">@null</item>
        <item name="drawableRightCompat">@drawable/selector_custom_radio_buttons</item>
        <item name="android:drawablePadding">@dimen/medium</item>
        <item name="android:minWidth">200dp</item>
    </style>



    <style name="YK_VAX.Widget.MaterialComponents.Button.TextButton.Icon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:paddingStart">@dimen/xl</item>
        <item name="android:paddingEnd">@dimen/xl</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/sky_blue</item>
        <item name="fontFamily">@font/yk_montserrat_regular</item>
        <item name="android:lineSpacingMultiplier">0.1</item>
    </style>

    <style name="YK_VAX.Widget.MaterialComponents.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingStart">@dimen/xl</item>
        <item name="android:paddingEnd">@dimen/xl</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/yk_sans_bold</item>
        <item name="android:lineSpacingMultiplier">0.1</item>
    </style>

    <!--ICON Only Button style-->
    <style name="Widget.YK_VAX.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

</resources>